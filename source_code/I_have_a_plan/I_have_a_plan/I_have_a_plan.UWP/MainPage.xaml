<forms:WindowsPage
    x:Class="I_have_a_plan.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:forms="using:Xamarin.Forms.Platform.UWP"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:I_have_a_plan.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <UserControl HorizontalAlignment="Left" Height="100" Margin="1233,68,0,0" VerticalAlignment="Top" Width="100" Loaded="UserControl_Loaded" Background="#FFB32C2C"
                     Tapped="UserControl_Tapped">
            <UserControl.BorderBrush>
                <AcrylicBrush TintColor="#CCFC2424"/>
            </UserControl.BorderBrush>
        </UserControl>

    </Grid>
</forms:WindowsPage>